<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/smoke_back"
    android:theme="@style/darkTextTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/mainBack"
            android:layout_gravity="center"></View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/items_display_rv"
            android:layout_width="match_parent"
            android:layout_height="190dp">

        </android.support.v7.widget.RecyclerView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/whiteBack"
            android:id="@+id/pop_up_cancel_button">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:textColor="@color/lightSwitch"
                android:textSize="18sp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>